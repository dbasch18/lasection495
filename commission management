

def main():
	# Get the amount of sales.
	sales = get_sales()

	# Determine the commission rate.
	commissionRate = get_commissionRate()

    # Get the amount of hours worked.
	hoursWorked = get_hoursWorked()

    # Get the amount of tips.
	tipValue = get_tipValue()

	# Calculate total salary
	salary = sales * commissionRate * hoursWorked + tipValue
	
    # Display the amount of pay.
	print(f"The barber's total salary is: ${salary:.2f}")

def get_sales():
	# Get the amount of monthly sales.
	monthly_sales = float(input('Enter the monthly sales: '))

	# Return the amount entered
	return monthly_sales
